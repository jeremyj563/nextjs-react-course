    "version": "0.2.0",
    "configurations": [
        {
            "name": "[local] Launch: npm start",
            "request": "launch",
            "type": "node-terminal",
            "command": "npm start",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "neverOpen",
            "port": 5859
        },
        {
            "name": "Debug current file",
            "request": "launch",
            "type": "node",
            "program": "${file}",
            "internalConsoleOptions": "neverOpen"
        }

    ]
}